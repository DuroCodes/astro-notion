---
const { pageData } = Astro.props;

const date = new Date(pageData.date.created);

const months = [
  'January',
  'February',
  'March',
  'April',
  'May',
  'June',
  'July',
  'August',
  'September',
  'October',
  'November',
  'December',
];

const formatDate = (date: Date) => {
  return `${
    months[date.getUTCMonth()]
  } ${date.getUTCDate()}, ${date.getUTCFullYear()}`;
};
---

<div class="header">
  <h1 class="title">{`${pageData.properties.icon} ${pageData.properties.title}`}</h1>
  <p class="date">{formatDate(date)}</p>
</div>

<style lang="scss">
  .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: var(--size-8) 0 var(--size-10) 0;

    .title {
      font-size: var(--size-8);
      font-weight: 500;
      letter-spacing: -0.025em;
      line-height: 1;
      word-break: normal;
      text-align: center;
      margin-bottom: var(--size-7);
    }

    .date {
      text-transform: uppercase;
    }
  }
</style>
